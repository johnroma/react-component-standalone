{
  "name": "@anthood/react-component-standalone",
  "repository": {
    "url": "https://github.com/johnroma/react-component-standalone"
  },
  "author": {
    "name": "John Romani",
    "email": "john@anthood.com"
  },
  "keywords": [
    "frontend",
    "typescript",
    "boilerplate",
    "package generator",
    "npm",
    "rect"
  ],
  "license": "MIT",
  "private": false,
  "version": "0.0.3",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "bin": {
    "react-component-standalone": "./bin/index.mjs"
  },
  "scripts": {
    "dev": "vite",
    "build": "tsup src/components/index.ts --format cjs,esm --minify --dts --clean",
    "lint": "eslint src --ext .js,.jsx,.ts,.tsx",
    "lint:fix": "eslint src --ext .js,.jsx,.ts,.tsx --fix",
    "format": "prettier \"src/**/*.{js,jsx,ts,tsx,css,scss}\" --write",
    "compile": "tsc",
    "crc": "node bin/index.mjs"
  },
  "peerDependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@types/react": "^18.2.46",
    "@types/react-dom": "^18.2.18",
    "@typescript-eslint/eslint-plugin": "^6.16.0",
    "@typescript-eslint/parser": "^6.16.0",
    "@vitejs/plugin-react": "^4.2.1",
    "eslint": "^8.56.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-airbnb-typescript": "^17.1.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-jsx-a11y": "^6.8.0",
    "eslint-plugin-prettier": "^5.1.2",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "prettier": "^3.1.1",
    "tsup": "^8.0.1",
    "typescript": "^5.3.3",
    "vite": "^5.0.10"
  },
  "dependencies": {
    "inquirer": "^9.2.12"
  }
}
